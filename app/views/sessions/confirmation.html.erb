<% content_for :title do %>
  <%= t 'title' %>
<% end %>
<h2>Confirmation</h2>

<p>
  <%= t 'confirmation.title' %>
</p>

<p>
  <b><%= t 'employee.name' %>:</b>
  <%= current_user.employee.name %>
</p>

<p>
  <b><%= t 'employee.number' %>:</b>
  <%= current_user.employee.number %>
</p>

<p>
  <b><%= t 'employee.date' %>:</b>
  <%= current_user.employee.admission_date.strftime("%B %d, %Y %A") %>
</p>

<p>
  <b><%= t 'employee.birth_date' %>:</b>
  <%= current_user.employee.birth_date.strftime("%B %d, %Y %A") %>
</p>

<p>
  <b><%= t 'project' %>:</b>
  <%= current_user.employee.project.name %>
</p>

<%= link_to t('confirmation.continue'), edit_session_path(current_user.employee.id) %> |
<%= link_to t('confirmation.cancel'), destroy_user_session_path, method: :get %>
