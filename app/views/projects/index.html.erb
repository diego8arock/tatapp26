<h2>Projects</h2>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class="col-md-2">Id</th>
      <th class="col-md-2">Name</th>
      <th class="col-md-2">Tag</th>
      <th class="col-md-2">Status</th>
      <th class="col-md-4">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td class="col-md-2"><%= project.id %></td>
        <td class="col-md-2"><%= project.name %></td>
        <td class="col-md-2"><%= project.tag %></td>
        <td class="col-md-2"><%= project.status == Project::ACTIVE ? "Active" : "Inactive" %></td>
        <td class="col-md-4">
          <%= link_to 'Show', project_path(project), class: "btn btn-info" %>
          <%= link_to 'Edit', edit_project_path(project), class: "btn  btn-warning" %>
          <%= link_to 'Destroy', project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

