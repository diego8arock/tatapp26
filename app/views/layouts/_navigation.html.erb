<div class="row-fluid">
  <div class="span3">
    <%= link_to "Tatapp26", root_path, :class => 'brand' %>
  </div>
  <div class="span6">
    <div class="hide" id="current_page" data-page="<%= @nav_class %>"></div>
      <ul class="nav <%= I18n.locale %>">
        <% if current_user %>
          <li>
          <%= link_to t('menu.assignment'), assignments_path, "class" => "assignment " + I18n.locale.to_s, :target => target %>
          </li>
        <% end %>
      </ul>
  </div>
  <div class="span3">
    <div class="btn-group pull-right">
    <% if current_user %>
      <span><%= current_user.name %></span>
      <ul class="dropdown-menu">
        <li><%= link_to t('logout'), logout_path, :method=>'get', :target => target %>  </li>
      </ul>

    <% else %>
      <%= link_to t('login'), login_path, :class => "btn", :title => "Ingresar", :target => target %>
    <% end %>
    </div>
  </div>
</div>
